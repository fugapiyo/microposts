<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", minlength: 1, maxlength: Micropost::CONTENT_LENGTH_MAX %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
